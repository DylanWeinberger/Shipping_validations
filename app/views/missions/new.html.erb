<h1>Mission create page.</h1>
<h1>Only Smugglers Can Create Missions</h1>
<%= form_for @mission do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label :cargo %>
	<%= f.text_field :cargo, size: "60x12" %>
	<%= f.label :cost %>
	<%= f.number_field :cost, step: 1 %>
	<%= f.label :containers %>
	<%= f.number_field :containers, step: 1 %>
	<% options = options_from_collection_for_select(@vehicles, 'id', 'name') %>
	<%= f.select :vehicle_id,  options %>
	<%= f.label :origin %>
	<%= f.select :origin, [['Philadelphia', 'philadelphia'], ['Atlantic City', 'atlantic city'], ['Chicago', 'chicago'], ['New York', 'new york'], ['Brookyln', 'brooklyn'], ['New Orleans', 'new orleans'], ['Gary', 'gary']] %>
	<%= f.label :destination %>
	<%= f.select :destination, [['Philadelphia', 'philadelphia'], ['Atlantic City', 'atlantic city'], ['Chicago', 'chicago'], ['New York', 'new york'], ['Brookyln', 'brooklyn'], ['New Orleans', 'new orleans'], ['Gary', 'gary']] %>
	<%= f.submit :create %>
	<% end %>



